    out property<duration> default-animate-duration: 200ms;

    out property<color> brand-color: #409EFF;
    out property<color> success-color: #67C23A;
    out property<color> warning-color: #E6A23C;
    out property<color> danger-color: #F56C6C;
    out property<color> info-color: #909399;
    out property<color> discovery-color: #6E5DC6;
