import { Theme } from "../theme.slint";
import { Store, SelectPanel } from "../store.slint";
import { ColorPalette } from "./colorpalette.slint";
import { ColorPicker } from "./colorpicker.slint";
import { ColorMaker } from "./colormaker.slint";
import { SystemFont } from "./systemfont/panel.slint";

export component Body inherits VerticalLayout {
    ColorPalette {
        visible: Store.selected-panel == SelectPanel.colorpalette;
        height: self.visible ? Theme.default-height : 0px;
    }

    ColorMaker {
        visible: Store.selected-panel == SelectPanel.colormaker;
        height: self.visible ? Theme.default-height : 0px;
    }

    ColorPicker {
        visible: Store.selected-panel == SelectPanel.colorpicker;
        height: self.visible ? Theme.default-height : 0px;
    }

    SystemFont {
        visible: Store.selected-panel == SelectPanel.systemfont;
        height: self.visible ? Theme.default-height : 0px;
    }
}
